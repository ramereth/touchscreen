<screen id="screen_oracle_welcome" slideshow="true">

        <!-- delegates for fetching the next frame -->
        <attribute name="showDelegateR"/>
        <attribute name="hideDelegateR"/>
	<attribute name="showDelegateL"/>
        <attribute name="hideDelegateL"/>

        <!-- refreshes the view -->
        <method name="showWelcomeR">
            showwelcomeright.doStart();
            LzTimer.resetTimer(this.hideDelegateR, 25000 );
        </method>

        <!-- refreshes the view -->
        <method name="hideWelcomeR">
            hidewelcomeright.doStart();
            LzTimer.resetTimer(this.showDelegateL, 5000 );
        </method>

	<!-- refreshes the view -->
        <method name="showWelcomeL">
            showwelcomeleft.doStart();
            LzTimer.resetTimer(this.hideDelegateL, 25000 );
        </method>

        <!-- refreshes the view -->
        <method name="hideWelcomeL">
            hidewelcomeleft.doStart();
            LzTimer.resetTimer(this.showDelegateR, 5000 );
        </method>



    
