    <animatorgroup name="showwelcomeright" start="false" process="sequential">


	<animatorgroup start="true" process="simultaneous">
	<animator target="${parent.parent.parent.l1}" attribute="x" to="350" duration="800" motion="easein" />
	<animator target="${parent.parent.parent.l2}" attribute="x" to="475" duration="750" motion="easein" />
        <animator target="${parent.parent.parent.l3}" attribute="x" to="560" duration="700" motion="easein" />
        <animator target="${parent.parent.parent.l4}" attribute="x" to="635" duration="650" motion="easein" />
        <animator target="${parent.parent.parent.l5}" attribute="x" to="720" duration="600" motion="easein" />
        <animator target="${parent.parent.parent.l6}" attribute="x" to="820" duration="550" motion="easein" />
        <animator target="${parent.parent.parent.l7}" attribute="x" to="930" duration="500" motion="easein" />
        </animatorgroup>

    </animatorgroup>

    <animatorgroup name="hidewelcomeright" start="false" process="simultaneous">
	<animator target="${parent.parent.l7}" attribute="x" to="1450" duration="500" motion="easein" />
	<animator target="${parent.parent.l6}" attribute="x" to="1450" duration="550" motion="easein" />
	<animator target="${parent.parent.l5}" attribute="x" to="1450" duration="600" motion="easein" />
	<animator target="${parent.parent.l4}" attribute="x" to="1450" duration="650" motion="easein" />
	<animator target="${parent.parent.l3}" attribute="x" to="1450" duration="700" motion="easein" />
	<animator target="${parent.parent.l2}" attribute="x" to="1450" duration="750" motion="easein" />
	<animator target="${parent.parent.l1}" attribute="x" to="1450" duration="800" motion="easein" />
    </animatorgroup>

    <animatorgroup name="showwelcomeleft" start="false" process="simultaneous">
	<animator target="${parent.parent.l7}" attribute="x" to="930" duration="800" motion="easein" />
        <animator target="${parent.parent.l6}" attribute="x" to="820" duration="750" motion="easein" />
        <animator target="${parent.parent.l5}" attribute="x" to="720" duration="700" motion="easein" />
        <animator target="${parent.parent.l4}" attribute="x" to="635" duration="650" motion="easein" />
        <animator target="${parent.parent.l3}" attribute="x" to="560" duration="600" motion="easein" />
        <animator target="${parent.parent.l2}" attribute="x" to="475" duration="550" motion="easein" />
        <animator target="${parent.parent.l1}" attribute="x" to="350" duration="500" motion="easein" />
    </animatorgroup>

    <animatorgroup name="hidewelcomeleft" start="false" process="simultaneous">
        <animator target="${parent.parent.l1}" attribute="x" to="-300" duration="500" motion="easein" />
        <animator target="${parent.parent.l2}" attribute="x" to="-300" duration="550" motion="easein" />
	<animator target="${parent.parent.l3}" attribute="x" to="-300" duration="600" motion="easein" />
	<animator target="${parent.parent.l4}" attribute="x" to="-300" duration="650" motion="easein" />
	<animator target="${parent.parent.l5}" attribute="x" to="-300" duration="700" motion="easein" />
	<animator target="${parent.parent.l6}" attribute="x" to="-300" duration="750" motion="easein" />
	<animator target="${parent.parent.l7}" attribute="x" to="-300" duration="800" motion="easein" />
    </animatorgroup>

    <borderedBox x="100" y="400" name="edray" width="1144" height="180" bgcolor="white" viewopacity="0.0">
        <view name="container"  height="143" width="1100" x="15" y="15" resource="oracle_logo" stretches="both">

        </view>
    </borderedBox>

    <animatorgroup name="showgroup" start="false" process="simultaneous">
        <animator target="${parent.parent.edray}" attribute="x" to="100" duration="800" motion="easein" />
    </animatorgroup>
    


    <method name="_show">
        this.showDelegateR = new LzDelegate(this, "showWelcomeR")
        this.hideDelegateR = new LzDelegate(this, "hideWelcomeR")
	this.showDelegateL = new LzDelegate(this, "showWelcomeL")
        this.hideDelegateL = new LzDelegate(this, "hideWelcomeL")
        showgroup.doStart();
        LzTimer.resetTimer(this.showDelegateR, 5000 );
        //this.osl.animate("x",50,800);
        //this.oss.animate("x",960,800);
        //this.edray.animate("x",960,800);
    </method>

    <method name="_hide">
        LzTimer.removeTimer(this.hideDelegateL);
        LzTimer.removeTimer(this.hideDelegateR);
        LzTimer.removeTimer(this.showDelegateL);
        LzTimer.removeTimer(this.showDelegateR);
        hidewelcomeleft.doStart();         
        this.edray.animate("x",1400,800);
        
    </method>

</screen>
